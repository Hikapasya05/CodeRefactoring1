<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".game_screen_2">


    <ImageView
        android:id="@+id/house"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        app:srcCompat="@drawable/house" />

    <TextView
        android:id="@+id/one_day_in_your_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="one day, in your house..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#305472"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btn_whathappened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What happened?"
        app:layout_constraintTop_toBottomOf="@id/one_day_in_your_house"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:backgroundTint="#305472"
        />
</androidx.constraintlayout.widget.ConstraintLayout>